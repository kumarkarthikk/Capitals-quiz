            }
            
            .user-profile {
                position: static;
                margin-bottom: 15px;
                justify-content: center;
                width: 100%;
            }
            
            .quiz-container {
                padding: 15px;
            }
            
            .question {
                font-size: 18px;
            }
            
            .progress-box {
                width: 25px;
